include ../../import/import
doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="msapplication-TileColor" content="#da532c")
        meta(name="theme-color" content="#ffffff")
        link(rel="apple-touch-icon" sizes="180x180" href="./assets/favicons/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="./assets/favicons/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="./assets/favicons/favicon-16x16.png")
        link(rel="manifest" href="./assets/favicons/site.webmanifest")
        link(rel="mask-icon" href="./assets/favicons/safari-pinned-tab.svg" color="#5bbad5")
        title Form elements
    body 
        +logo
        .form-elements
            .form-elements__col
                    .form-elements__container
                        p.form-elements__header text field
                        +text-field()
                    .form-elements__container
                        p.form-elements__header text field
                        +text-field('This is pretty awesome','email')
                    .form-elements__container
                        p.form-elements__header dropdown
                        +select() 
                    .form-elements__container.double-margin
                        p.form-elements__header masked text field
                        +text-field('ДД.ММ.ГГГГ','text',true)
                    .form-elements__container.double-margin
                        +date-dropdown(true)
                    .form-elements__container.double-margin
                        p.form-elements__header filter date dropdown
                        +date-dropdown-filter(true)
                    .form-elements__container.double-margin
                        p.form-elements__header text field subscription
                        +text-field-subscription(true)
                    .form-elements__container.form-elements__container-select 
                        p.form-elements__header dropdown
                        +select('rooms',false,[2,2,0])
                    .form-elements__container 
                        p.form-elements__header dropdown
                        +select('rooms',true,[2,2,0])
                    .form-elements__container.form-elements__container-checkbox
                        +checkbox-list('expendable checkbox list',false,[0,1,1,1,0,0],'Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь')
                    .form-elements__container
                        +checkbox-list('expendable checkbox list',true,[0,1,1,1,0,0],'Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь')
            .form-elements__col.form-elements__col-second
                    .form-elements__container.double-margin 
                        p.form-elements__header checkbox buttons
                        +checkbox-buttons([0,1,1],'Можно курить', 'Можно с питомцами', 'Можно пригласить гостей (до 10 человек)')
                    .form-elements__container.double-margin 
                        p.form-elements__header radio buttons
                        +radio-button('radio button','man')
                    .form-elements__container.double-margin
                        p.form-elements__header toggle
                        +toggle(true)
                        .toggle-divider
                        +toggle() 
                    .form-elements__container.double-margin
                        p.form-elements__header like button
                        .form-elements__container_flexible
                            +like-button()
                            +like-button('12',true)
                    .form-elements__container 
                        p.form-elements__header rate button
                        .form-elements__container_flexible
                            +rating(4,'rating-4')
                            +rating(5,'rating-5')
                    .form-elements__container.form-elements__container-select.first 
                        p.form-elements__header dropdown
                        +select('guests',true,[0,0,0])
                    .form-elements__container.container-rich-checkbox
                        p.form-elements__header rich checkbox buttons
                        +rich-checkbox-buttons({
                            items: [
                                {
                                    header: 'Широкий коридор',
                                    mainText: 'Ширина коридоров в номере не менее 91 см.'
                                },
                                {
                                    header: 'Помощник для инвалидов',
                                    mainText: 'На 1 этаже вас встретит специалист и проводит до номера.'
                                }
                                ]})
            .form-elements__col.form-elements__col-third
                    .form-elements__container.container-slider 
                        +range-slider('range slider')
                    .form-elements__container
                        p.form-elements__header buttons
                        .form-elements__container-button
                            +button-filled
                        .form-elements__container-button
                            +button-border
                        .form-elements__container-button
                            +button-icon
                        .form-elements__container-button
                            +button-arrow('перейти к оплате')
                    .form-elements__container.form-elements__container-pagination
                        p.form-elements__header pagination
                        +pagination
                    .form-elements__container.form-elements__container-select
                        .form-elements__header dropdown
                        +select('guests',true,[2,1,0])
                    .form-elements__container.form-elements__container-list
                        p.form-elements__header bullet list
                        +bullet-list
            .form-elements__container_low
                    .form-elements__container.form-elements__container-icon-text
                        +icon-text-list({
                            items:[
                            {
                            header:'Комфорт',
                            text:'Шумопоглощающие стены',
                            icon: 'insert_emoticon'
                            },
                            {
                            header: 'Удобство',
                            text: 'Окно в каждой из спален',
                            icon: 'location_city'
                            }
                            ]})
                    +card-comment(12,true,'Мурад Сарафанов','avatar.svg','5 дней назад','Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
