mixin header(authorization = false,userName="юлий цезарь")
    header.header
        .header__body 
            .header__logo 
            nav.header__menu
                ul.header__list 
                    li
                        a(href="") О нас 
                    li.list__options
                        .options-header 
                            a Услуги
                            span.arrow expand_more
                        .options-bar 
                            p 
                                a(href="") Услуга 1
                            p 
                                a(href="") Услуга 2
                    li
                        a(href="") Вакансии
                    li 
                        a(href="") Новости
                    li.list__agree 
                        .agree-header
                            a Соглашения
                            span.arrow expand_more
                        .agree-bar 
                            p
                                a(href="") Соглашение 1 
                            p
                                a(href="") Соглашение 2
                    if authorization 
                
                    else
                        li.entry-bar
                            a(href="sign-in.html")
                                +button-border('войти')
                            a(href="registration.html")
                                +button-filled('зарегистрироваться')
                if authorization 
                        .bar-smallscr
                            .entry-bar 
                                    .divider
                                    p.login=userName
                            .header__list.smallscr
                                span
                            span.entry-bar.smallscr.id 
                                a(href="")
                                    i.material-icons person
                else
                        .bar-smallscr
                            .header__list.smallscr
                                span
                            span.entry-bar.smallscr.login
                                a(href="sign-in.html")
                                    i.material-icons input
                            span.entry-bar.smallscr.register 
                                a(href="registration.html")
                                    i.material-icons person_add
                            
            
            