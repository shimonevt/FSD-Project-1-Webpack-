mixin select(infoType='dropdown',selectType='guests',isActive=false,values=[0,0,0])
            -let minValue = 0;
            -let names, listData;
            -let selectClass;
            if isActive
                -selectClass ='select js-select active'
            else
                -selectClass ='select js-select'
            if selectType =='rooms'
                -names = ['спальни', 'кровати', 'ванные комнаты']
                -listData = ['bedrooms', 'beds', 'bathrooms']
            else if selectType == 'guests'
                -names = ['взрослые', 'дети', 'младенцы']
                -listData = ['guests', 'guests', 'babies']
            div(class=selectClass,data-type=selectType)
                p.info__type=infoType
                .select__body.js-select__body
                    if selectType =='guests'
                        .js-select__text.select__text(type='guests') Сколько гостей
                    if selectType == 'rooms'
                        .js-select__text.select__text(type='rooms') Выберите комнаты                            
                    .select__bar.js-select__bar
                        ul.select__list.js-select__list
                                -let i =0
                                each name in names
                                    if values[i]<0
                                        -vals[i]=minValue
                                    .js-list__group.list__group(data-item=listData[i])
                                        li.list__item=names[i]
                                        .buttons__group.js-buttons__group
                                            if values[i]==minValue
                                                .button__minus.js-button__minus.js-button.button -
                                            else
                                                .button__minus.js-button__minus.js-button.button.active -
                                            p.js-item__count.item__count=values[i]
                                            .js-button__plus.js-button.button__plus.button +
                                    -i++
                        if selectType =='guests'
                            .edit-buttons.js-edit-buttons
                                .edit__clear.edit-btn.js-edit__clear
                                    include ../button-icon/button-icon
                                    +button-icon('очистить',1)
                                .edit__accept.edit-btn.js-edit__accept
                                    include ../button-icon/button-icon
                                    +button-icon('применить',0)