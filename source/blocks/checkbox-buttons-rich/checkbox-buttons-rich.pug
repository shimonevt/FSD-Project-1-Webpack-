mixin rich-checkbox-buttons(props={})
    -let { items } = props
        .rich-checkbox-buttons
            each item in items
                -let { header, mainText } = item
                label.rich-checkbox-buttons__item
                    input.rich-checkbox-buttons__input(type="checkbox")
                    span.rich-checkbox-buttons__check-box
                    .rich-checkbox-buttons__text
                        p.rich-checkbox-buttons__text_header=header
                        p.rich-checkbox-buttons__text_main=mainText      
            