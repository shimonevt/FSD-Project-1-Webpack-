mixin rating(props={})
    -const { rate, ratingName } = props;
    .rating
        -for(let i=0,a=5; i < 5;i++,a--)
            if rate == a && rate != 0
                input.rating__button(id=ratingName+"-"+a+"-star", type="radio", name=ratingName, data-value=a, checked)
                label.rating__img(for=ratingName+"-"+a+"-star")
            else
                input.rating__button(id=ratingName+"-"+a+"-star", type="radio", name=ratingName, data-value=a)
                label.rating__img(for=ratingName+"-"+a+"-star")
